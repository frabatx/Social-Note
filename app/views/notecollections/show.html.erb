<style>
.container{
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>
<p id="notice"><%= notice %></p>
<div class="container border border-dark shadow-lg p-4 mb-4 bg-white">
<div class="well well-lg">
  <div class="media-body">
    <h5 class="mt-0"><p>
  <strong> Name: </strong>
<h3>  <%= @notecollection.name %></h3>
</p>

<p>
  <strong>Comment:</strong>
  <%= @notecollection.comment %>
</p>

<table class="table table-striped ">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">text</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-active">
      <% @notecollection.notes.each do |note| %>
      <td><%= image_tag note.image.url(:medium) %></td>
      <td><%= note.text %></td>
            </tr>
                  <%end%>
          </tbody>
        </table>
  <div class="btn-group btn-group-toggle">
  <% if !current_user.admin? %>
<%= link_to 'Edit', edit_notecollection_path(@notecollection) ,:class => "btn" %>
  <% end %>
<%= link_to 'Back', notecollections_path,:class => "btn" %>
<%= link_to 'Share', new_sharing_notecollection_path(@notecollection),:class => "btn"  %>
  </div>
</div>
</div>
</div>
