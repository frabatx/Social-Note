<style>
.container{
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>
<p id="notice"><%= notice %></p>


<div class="container border border-dark shadow-lg p-4 mb-4 bg-white">
<div class="well well-lg">
  <%= image_tag @note.image.url(:medium), class: "align-self-start mr-3" %>

  <div class="media-body">
    <h5 class="mt-0"><p>
      <strong>Text:</strong>
      <%= @note.text %>
    </p></h5>
    <p>
    	<strong>Note shared with:</strong>
    	<%= @note.users.map {|u| u.name}.join(', ') %>
    </p>
    <div class="btn-group btn-group-toggle">
      <%= link_to 'Edit', edit_note_path(@note), :class => "btn" %>
      <% if !current_user.admin? %>
      <%= link_to 'Share', new_sharing_note_path(@note), :class => "btn" %>
      <% end %>
      <%= link_to 'Back', notes_path, :class => "btn" %>

    </div>
  </div>
</div>
</div>
