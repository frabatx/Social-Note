<style>
.container{
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>


<%= form_with(model: note, local: true, html: { multipart: true })   do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :text %>
    <%= form.text_area :text, id: :note_text , :class => "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :image %>
    <%= form.file_field :image , :class => "form-control-file"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
